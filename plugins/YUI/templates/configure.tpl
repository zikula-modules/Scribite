{adminheader}<div class="z-admin-content-pagetitle">    <img src="{$baseurl}modules/Scribite/plugins/YUI/images/logo.png" height='22'>    <h3>{gt text='YUI Rich Text Editor configuration'}</h3></div>{form cssClass="z-form"}    {formvalidationsummary}    <fieldset>        <legend>{gt text='Settings'}</legend>        <div class="z-formrow">            {formlabel for="type" __text="Toolbar"}            {formdropdownlist id="type" items=$types}        </div>        <div class="z-formrow">            {formlabel __text="Editor width and height"}            <div>                {formtextinput id="width" size="5" maxLength="6" text="auto"}                {formlabel for="width" __text="px/(auto)"}                {formtextinput id="height" size="5" maxLength="6" text="auto"}                {formlabel for="height" __text="px/(auto)"}            </div>        </div>        <div class="z-formrow">            {formlabel for="dombar" __text="Statusbar"}            {formcheckbox id="dombar"}        </div>        <div class="z-formrow">            {formlabel for="animate" __text="Animation"}            {formcheckbox id="animate"}        </div>        <div class="z-formrow">            {formlabel for="collapse" __text="Collapsable"}            {formcheckbox id="collapse"}        </div>    </fieldset>    <div class="z-buttons z-formbuttons">        {formbutton class="z-bt-ok" commandName="save" __text="Save"}        {formbutton class="z-bt-cancel" commandName="cancel" __text="Cancel"}    </div>{/form}{adminfooter}