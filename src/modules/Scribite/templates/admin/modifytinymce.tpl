{adminheader}<div class="z-admin-content-pagetitle">    {icon type="config" size="small"}    <h3>{gt text='TinyMCE configuration'}</h3></div>{form cssClass="z-form"}    {formvalidationsummary}        <fieldset>        <legend>{gt text='Settings'}</legend>        <div class="z-formrow">            {formlabel for="tinymce_language" __text="Editor language"}            {formdropdownlist id="tinymce_language" items=$tinymce_langlist selectedValue=$xinha_language|default:en}        </div>        <div class="z-formrow">            {formlabel for="tinymce_theme" __text="Theme"}            {formdropdownlist id="tinymce_theme" items=$tinymce_themelist}        </div>        <div class="z-formrow">            {formlabel for="tinymce_dateformat" __text="Date format"}            {formtextinput id="tinymce_dateformat" size="40" maxLength="50" text="%Y-%m-%d"}        </div>        <div class="z-formrow">            {formlabel for="tinymce_timeformat" __text="Time format"}            {formtextinput id="tinymce_timeformat" size="40" maxLength="50" text="%H:%M:%S"}        </div>        <div class="z-formrow">            {formlabel __text="Editor width and height"}            <div>                {formtextinput id="tinymce_width" size="4" maxLength="4" text="75%"}                {formlabel for="tinymce_width" __text="px/(%)"}                {formtextinput id="tinymce_height" size="4" maxLength="4" text="400"}                {formlabel for="tinymce_height" __text="px/(%)"}            </div>        </div>        <div class="z-formrow">            {formlabel for="tinymce_style" __text="Editor stylesheet"}            {formtextinput id="tinymce_style" size="40" maxLength="50" text="modules/Scribite/style/tinymce/style.css"}        </div>    </fieldset>    <fieldset>        <legend>{gt text='TinyMCE Plugins (<a href="http://wiki.moxiecode.com/index.php/TinyMCE:Plugins">documentation</a>)'}</legend>        <div class="z-formrow">            {formcheckboxlist id="tinymce_activeplugins" items=$tinymce_allplugins}        </div>    </fieldset>    <div class="z-buttons z-formbuttons">        {formbutton class="z-bt-ok" commandName="save" __text="Save"}        {formbutton class="z-bt-archive" commandName="restore" __text="Restore defaults"}        {formbutton class="z-bt-cancel" commandName="cancel" __text="Cancel"}    </div>{/form}{adminfooter}