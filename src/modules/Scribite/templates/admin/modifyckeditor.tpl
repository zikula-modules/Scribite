{adminheader}<div class="z-admin-content-pagetitle">    <img src="{$baseurl}modules/Scribite/lib/Scribite/Editor/CKeditor/logo.gif" height='22'>    <h3>{gt text='CKEditor configuration'}</h3></div>{form cssClass="z-form"}{formvalidationsummary}    <fieldset>        <legend>{gt text='Settings'}</legend>        <div class="z-formrow">            {formlabel for="ckeditor_skin" __text="Skin"}            {formdropdownlist id="ckeditor_skin" items=$ckeditor_skinlist}        </div>        <div class="z-formrow">            {formlabel for="ckeditor_language" __text="Editor language"}            {formdropdownlist id="ckeditor_language" items=$ckeditor_langlist selectedValue=$xinha_language|default:en}        </div>        <div class="z-formrow">            {formlabel for="ckeditor_barmode" __text="Toolbar"}            {formdropdownlist id="ckeditor_barmode" items=$ckeditor_barmodelist}            <em class="z-formnote z-sub">{gt text="All but Full and Basic toolbars have to be defined in the custom config file (if used)."}</em>            <em class="z-formnote z-sub">{gt text="To specify different toolbar for particular module, in `Textareas` insted `all` type `all:userbarx`. This also works for given textarea field or list of fields."}</em>        </div>        <div class="z-formrow">            {formlabel for="ckeditor_customconfigfile" __text="Editor custom config file"}            {formtextinput id="ckeditor_customconfigfile" size="40" maxLength="150"}            <em class="z-formnote z-sub">{gt text="Example: custconfig.js"}</em>        </div>        <div class="z-formrow">            {formlabel for="ckeditor_extraplugins" __text="Editor extra plugins" text="autogrow,stylesheetparser,zikulapagebreak"}            {formtextinput id="ckeditor_extraplugins" size="40" maxLength="150"}            <em class="z-formnote z-sub">{gt text="Example: autogrow,stylesheetparser,zikulapagebreak"}</em>        </div>        <div class="z-formrow">            {formlabel for="ckeditor_maxheight" __text="Editor maximum height for 'autogrow' plugin" text="400px"}            {formtextinput id="ckeditor_maxheight" size="4" maxLength="6"}            <em class="z-formnote z-sub">{gt text="px or % or leave empty for default/resize"}</em>        </div>        <div class="z-formrow">            {formlabel for="ckeditor_style_editor" __text="Editor stylesheet" text="modules/Scribite/style/ckeditor/content.css"}            {formtextinput id="ckeditor_style_editor" size="40" maxLength="150"}            <em class="z-formnote z-sub">{gt text="You can try to enter your theme stylesheet here if you want."}</em>            <em class="z-formnote z-sub">{gt text="In most cases, the editor fits to the theme then."}</em>            <em class="z-formnote z-sub">{gt text="Example: themes/SeaBreeze/style/style.css"}</em>        </div>        <div class="z-formrow">            {formlabel for="ckeditor_filemanagerpath" __text="Path to filemanager"}            {formtextinput id="ckeditor_filemanagerpath" size="40" maxLength="150"}            <em class="z-formnote z-sub">{gt text="Used to upload and select images or other files. Supported: CKFinder and KCFinder."}</em>            <em class="z-formnote z-sub">{gt text="Exaple paths: utils/ckfinder or utils/kcfinder (rights to execute php)"}</em>        </div>    </fieldset>    <div class="z-buttons z-formbuttons">        {formbutton class="z-bt-ok" commandName="save" __text="Save"}        {formbutton class="z-bt-cancel" commandName="cancel" __text="Cancel"}    </div>{/form}{adminfooter}