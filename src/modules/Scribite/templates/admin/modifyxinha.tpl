{adminheader}<div class="z-admin-content-pagetitle">    <img src="{$baseurl}modules/Scribite/plugins/Xinha/images/logo.gif" height='22'>    <h3>{gt text='Xinha configuration'}</h3></div>{form cssClass="z-form"}{formvalidationsummary}<fieldset>        <legend>{gt text='Settings'}</legend>        <div class="z-formrow">            {formlabel for="barmode" __text="Toolbar"}            {formdropdownlist id="barmode" items=$barmodes selectedValue=$barmode|default:reduced}        </div>        <div class="z-formrow">            {formlabel for="skin" __text="Skin"}            {formdropdownlist id="skin" items=$skinlist}        </div>        <div class="z-formrow">            {formlabel __text="Editor width and height"}            <div>                {formtextinput id="width" size="5" maxLength="6"}                {formlabel for="width" __text="px/(auto)"}                {formtextinput id="height" size="5" maxLength="6"}                {formlabel for="height" __text="px/(auto)"}            </div>        </div>        <div class="z-formrow">            {formlabel for="style" __text="Editor stylesheet"}            {formtextinput id="style" size="40" maxLength="150" text="modules/Scribite/plugins/Xinha/style/editor.css"}            <em class="z-formnote z-sub">{gt text="You can try to enter your theme stylesheet here if you want."}</em>            <em class="z-formnote z-sub">{gt text="In most cases, the editor fits to the theme then."}</em>            <em class="z-formnote z-sub">{gt text="Example: themes/SeaBreeze/style/style.css"}</em>        </div>        <div class="z-formrow">            {formlabel for="style_dynamiccss" __text="Stylesheet for DynamicCSS plugin"}            {formtextinput id="style_dynamiccss" size="40" maxLength="150" text='modules/plugins/Scribite/xinha/style/DynamicCSS.css'}        </div>        <div class="z-formrow">            {formlabel for="style_stylist" __text="Stylesheet for Stylist plugin"}            {formtextinput id="style_stylist" size="40" maxLength="150" text="modules/Scribite/plugins/xinha/style/stylist.css"}        </div>        <div class="z-formrow">            {formlabel for="converturls" __text="Convert urls to links"}            {formcheckbox id="converturls"}        </div>        <div class="z-formrow">            {formlabel for="showloading" __text="Show loading"}            {formcheckbox  id="showloading"}        </div>        <div class="z-formrow">            {formlabel for="statusbar" __text="Statusbar"}            {formcheckbox id="statusbar"}        </div>    </fieldset>    <fieldset>        <legend>{gt text="Xinha Plugins (<a href=\"http://xinha.webfactional.com/wiki/Plugins\">documentation</a>)"}</legend>        <p class="z-warningmsg">{gt text="Please do not activate the plug-ins DynamicCSS and Stylist simultaneously, because then the HTML source code toggle isn't working properly."}</p>        <div class="z-formrow">            {formcheckboxlist id="activeplugins" items=$allplugins}        </div>    </fieldset>    <div class="z-buttons z-formbuttons">        {formbutton class="z-bt-ok" commandName="save" __text="Save"}        {formbutton class="z-bt-cancel" commandName="cancel" __text="Cancel"}    </div>{/form}{adminfooter}